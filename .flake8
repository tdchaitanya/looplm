[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .ipynb_checkpoints,
    *.pyc,
    *.egg-info,
    .eggs
per-file-ignores =
    # Ignore unused imports and star imports in __init__.py files
    */__init__.py:F401,F403
    # Ignore line length in CLI files where we have long help strings
    **/cli/*.py:E501
